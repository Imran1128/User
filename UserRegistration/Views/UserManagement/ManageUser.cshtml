@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>


@{
    ViewData["Title"] = "Manage Users";
    
}

<div class="container my-5">
    <h1>@ViewData["Title"]</h1>

    <!-- Action Buttons with Icons -->
    <div class="d-flex justify-content-start mb-3">
        <button id="BlockBtn" class="btn btn-outline-danger me-2">
            <i class="fas fa-ban"></i> Block
        </button>
        <button id="UnBlockBtn" class="btn btn-outline-success me-2">
            <i class="fas fa-unlock-alt"></i> 
        </button>
        <button id="deleteBtn" class="btn btn-outline-danger">
            <i class="fas fa-trash-alt"></i>
        </button>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" onclick="toggleSelectAll()"/></th>
                        
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Email)
                         </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.LastLogin)
                         </th>
                        <th scope="col">
                            @* @Html.DisplayNameFor(model => model.LockoutEnd) *@
                        </th>
                            
                      
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
        <!-- Font Awesome Script for Icons -->

        <script asp-append-version="true" src="~/js/Users.js"></script>
}
